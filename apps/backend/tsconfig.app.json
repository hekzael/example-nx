{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@identity/*": ["src/modules/identity/*"],
      "@projects/*": ["src/modules/projects/*"],
      "@operations/*": ["src/modules/operations/*"],
      "@audit/*": ["src/modules/audit/*"],
      "@shared/*": ["src/shared/*"]
    },
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
